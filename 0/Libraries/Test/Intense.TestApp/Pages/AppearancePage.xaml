<Page
    x:Class="Intense.TestApp.Pages.AppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Intense.TestApp.Pages"
    xmlns:presentation="using:Intense.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <ScrollViewer Padding="{x:Bind Frame.Padding, Mode=OneWay}">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <presentation:ThemeCommands x:Key="ThemeCommands" />
                    </StackPanel.Resources>
                    
                    <Button Content="Light" Command="{Binding SetLightThemeCommand, Source={StaticResource ThemeCommands}}" />
                    <Button Content="Dark" Command="{Binding SetDarkThemeCommand, Source={StaticResource ThemeCommands}}" />
                    <Button Content="Toggle" Command="{Binding ToggleThemeCommand, Source={StaticResource ThemeCommands}}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
